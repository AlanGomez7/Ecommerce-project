<%- include("../partials/admin-header") %>


    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Products</h2>
            </div>
            <div>
                <a class="btn btn-primary btn-sm rounded" href="/admin/add-product" id="add-product">Create new</a>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-body">

            <table class="table table-hver mt-3" id="myTable">
                <thead style="margin-top: 20px;">
                    <tr class="m-5">
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">In stock</th>
                        <th scope="col">price</th>
                        <th scope="col"> Action </th>
                    </tr>
                </thead>

                <tbody>
                    <%products.forEach((products)=>{%>
                        <tr>
                            <td class="img-sm img-thumbnail"><img src="<%= products.image%>"></td>
                            <td><b>
                                    <%= products.title%>
                                </b></td>

                            <td>
                                <%= products.description%>
                            </td>
                            <td><span class="">
                                    <%=products.stock%>
                                </span></td>
                            <td><span class="">$<%=products.price%></span></td>

                            <td class="text-end d-flex">
                                <div class="col-lg-2 col-sm-2 col-4 col-action text-end d-flex">
                                    <a href="/admin/edit-product/<%= products._id %>"
                                        class="btn btn-sm font-sm rounded btn-brand mr-5">
                                        <i class="material-icons md-edit"></i> Edit
                                    </a>
                                    <%if(products.isListed){%>
                                        <button onclick="unlistProduct('<%= products._id%>')"
                                            class="btn btn-sm font-sm btn-light rounded" id="unlist-product">
                                            <i class="material-icons md-delete_forever"></i> Unlist
                                        </button>
                                        <%}else{%>
                                            <button onclick="listProduct('<%= products._id%>')"
                                                class="btn btn-sm font-sm  rounded"
                                                style="background-color: rgb(60, 106, 60);" id="list-product">
                                                <i class="material-icons md-delete_forever"></i> List
                                            </button>
                                            <%}%>
                                </div><!-- dropdown //end -->
                            </td>
                        </tr>
                        <%})%>
                </tbody>
            </table><!-- card-header end// -->
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->
    </section> <!-- content-main end// -->
    <footer class="main-footer font-xs">
        <div class="row pb-30 pt-15">
            <div class="col-sm-6">
                <script>
                    document.write(new Date().getFullYear())
                </script> Â©, Evara - HTML Ecommerce Template .
            </div>
            <div class="col-sm-6">
                <div class="text-sm-end">
                    All rights reserved
                </div>
            </div>
        </div>
    </footer>
    </main>
